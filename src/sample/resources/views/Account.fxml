<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox prefHeight="450.0" prefWidth="650.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.AccountController">

    <VBox styleClass="navigation">
        <Label text="Health tracker" />

        <HBox onMouseClicked="#navDashboardBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_home_white_24dp.png" />
            </ImageView>
            <Label text="Home" />
        </HBox>
        <HBox fx:id="switchMeal" onMouseClicked="#navMealBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_restaurant_white_24dp.png" />
            </ImageView>
            <Label text="Meal" />
        </HBox>
        <HBox onMouseClicked="#navExerciseBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_fitness_center_white_24dp.png" />
            </ImageView>
            <Label text="Exercise" />
        </HBox>
        <HBox fx:id="switchGroup" onMouseClicked="#navGroupsBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_groups_white_24dp.png" />
            </ImageView>
            <Label text="Group" />
        </HBox>

        <HBox onMouseClicked="#navAccountBtnOnClick" style="-fx-background-color: #73d3f1;" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_person_white_24dp.png" />
            </ImageView>
            <Label text="Account" />
        </HBox>

    </VBox>
    <VBox style="-fx-padding: 5 0 0 5" HBox.hgrow="ALWAYS">

        <Label prefHeight="37.0" prefWidth="229.0" styleClass="account-title" text="Account">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <VBox VBox.vgrow="ALWAYS">
            <GridPane VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="257.0" minWidth="10.0" prefWidth="98.0" />
                    <ColumnConstraints fillWidth="false" hgrow="SOMETIMES" maxWidth="408.0" minWidth="10.0" prefWidth="407.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints vgrow="ALWAYS" />
                </rowConstraints>
                <children>
                    <Label text="Name" />
                    <Label text="Email" GridPane.rowIndex="2" />
                    <Label text="DoB" GridPane.rowIndex="3" />
                    <Label text="Height" GridPane.rowIndex="4" />
                    <Label text="Weight" GridPane.rowIndex="5" />
                    <Label text="Username" GridPane.rowIndex="1" />
                    <Label text="BMI" GridPane.rowIndex="6" />
                    <Label fx:id="name" GridPane.columnIndex="1" />
                    <Label fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label fx:id="email" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label fx:id="DoB" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label fx:id="height" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label fx:id="weight" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    <Label fx:id="BMI" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                </children>

            </GridPane>
            <HBox spacing="10" HBox.hgrow="ALWAYS">

                <Button onMouseClicked="#logout" prefHeight="29.0" prefWidth="75.0" styleClass="logout-btn" text="Logout">
                </Button>

                <Button fx:id="editBtn" onMouseClicked="#switchToEditAccount" prefHeight="29.0" prefWidth="75.0" styleClass="save-btn" text="Edit">
                </Button>

                <padding>
                    <Insets bottom="5" left="5" right="5" top="5" />
                </padding>
            </HBox>

        </VBox>
    </VBox>

    <stylesheets>
        <URL value="@../accountView.css" />
    </stylesheets>
</HBox>
