<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<HBox prefHeight="430.0" prefWidth="700.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.UserGroupViewController">

    <VBox styleClass="navigation">
        <Label text="Health tracker" />

        <HBox onMouseClicked="#navHomeBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_home_white_24dp.png" />
            </ImageView>
            <Label text="Home" />
        </HBox>
        <HBox onMouseClicked="#navMealBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_restaurant_white_24dp.png" />
            </ImageView>
            <Label text="Meal" />
        </HBox>
        <HBox fx:id="switchExercise" onMouseClicked="#navExerciseBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_fitness_center_white_24dp.png" />
            </ImageView>
            <Label text="Exercise" />
        </HBox>
        <HBox fx:id="switchGroup" style="-fx-background-color: #73d3f1;" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_groups_white_24dp.png" />
            </ImageView>
            <Label text="Group" />
        </HBox>

        <HBox fx:id="switchAccount" onMouseClicked="#navAccountBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_person_white_24dp.png" />
            </ImageView>
            <Label text="Account" />
        </HBox>


        </VBox>

    <HBox styleClass="content-section" HBox.hgrow="ALWAYS">

        <VBox spacing="10" styleClass="group-info-box" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="30" VBox.vgrow="NEVER">
                <HBox alignment="CENTER_LEFT" spacing="3" HBox.hgrow="ALWAYS">
                    <Label fx:id="groupNameLabel" styleClass="group-name-label" text="Group name placeholder" textAlignment="CENTER" />
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <ImageView>
                        <Image requestedHeight="18" requestedWidth="18" url="@../images/baseline_people_black_18dp.png" />
                    </ImageView>
                    <Label fx:id="capacityLabel" styleClass="capacity-label" text="0" textAlignment="CENTER" />
                    <Label fx:id="maxCapacityLabel" styleClass="max-capacity-label" text="/30" textAlignment="CENTER" />
                </HBox>

            </HBox>


            <HBox alignment="CENTER_LEFT" spacing="3">
                <Label styleClass="group-code-info-label" text="Group code: " />
                <Label fx:id="groupCodeLabel" styleClass="group-code-label" text="JDHDGE" />
                <VBox onMouseClicked="#copyIconOnClick">
                    <ImageView fx:id="copyIcon">
                        <Image requestedHeight="22" requestedWidth="22" url="@../images/content_copy_24dp.png" />
                    </ImageView>
                </VBox>


            </HBox>

            <Label fx:id="copyResponseLabel" styleClass="copy-response-label" text="Code copied to the clipboard" visible="false" />

            <HBox spacing="3" VBox.vgrow="NEVER">
                <Label text="Group Goal " />
                <Label fx:id="groupGoal" text="" />
            </HBox>

            <HBox VBox.vgrow="NEVER">
                <VBox spacing="5" HBox.hgrow="ALWAYS">
                    <Label text="Group objectives" />
                    <ListView fx:id="achievementListView" styleClass="achievement-list-view" />
                </VBox>
            </HBox>
            <HBox VBox.vgrow="ALWAYS">
            </HBox>

            <HBox VBox.vgrow="NEVER">
                <VBox HBox.hgrow="ALWAYS">
                    <Button fx:id="leaveBtn" onAction="#leaveGroupOnClick" styleClass="leave-btn" text="Leave Group" />
                </VBox>
            </HBox>

        </VBox>

        <VBox styleClass="leaderboard-box" HBox.hgrow="ALWAYS">
            <HBox>
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Label text="Leaderboard" HBox.hgrow="NEVER" />
                </HBox>

                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <HBox onMouseClicked="#refreshLeaderboard" HBox.hgrow="NEVER">
                        <ImageView fx:id="refreshImg" HBox.hgrow="NEVER">
                            <Image requestedHeight="22" requestedWidth="22" url="@../images/outline_sync_black_24dp.png" />
                        </ImageView>
                    </HBox>
                </HBox>

            </HBox>


            <TableView fx:id="leaderBoardTable" VBox.vgrow="ALWAYS">
                <columns>
                    <!--                <TableColumn  fx:id="ranking" text="Ranking"/>-->
                    <!--                <TableColumn  fx:id="uName" text="Username"/>-->
                    <!--                <TableColumn  fx:id="score" text="Score"/>-->
                </columns>
            </TableView>
        </VBox>
    </HBox>

    <stylesheets>
        <URL value="@../userGroups.css" />
    </stylesheets>
</HBox>
