<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="400.0" prefWidth="600.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.GroupsController">

    <VBox styleClass="navigation">
        <Label text="Health tracker" />

        <HBox onMouseClicked="#navHomeBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_home_white_24dp.png" />
            </ImageView>
            <Label text="Home" />
        </HBox>
        <HBox onMouseClicked="#navMealBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_restaurant_white_24dp.png" />
            </ImageView>
            <Label text="Meal" />
        </HBox>
        <HBox fx:id="switchExercise" onMouseClicked="#navExerciseBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_fitness_center_white_24dp.png" />
            </ImageView>
            <Label text="Exercise" />
        </HBox>
        <HBox fx:id="switchGroup" onMouseClicked="#navGroupsBtnOnClick" style="-fx-background-color: #73d3f1;" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_groups_white_24dp.png" />
            </ImageView>
            <Label text="Group" />
        </HBox>

        <HBox fx:id="switchAccount" onMouseClicked="#navAccountBtnOnClick" styleClass="nav-btn">
            <ImageView>
                <Image url="@../images/baseline_person_white_24dp.png" />
            </ImageView>
            <Label text="Account" />
        </HBox>


    </VBox>

    <HBox styleClass="content-section" HBox.hgrow="ALWAYS">

        <VBox styleClass="groups-box" HBox.hgrow="ALWAYS">
            <Label styleClass="your-groups-label" text="Your Groups" />
            <ListView fx:id="groupsListView" styleClass="groups-list" VBox.vgrow="ALWAYS" />

        </VBox>

        <VBox alignment="CENTER" styleClass="group-actions" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" styleClass="join-group-box" VBox.vgrow="NEVER">
                    <Label styleClass="join-label" text="Join" />
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Code" />
                        <TextField fx:id="groupCodeField" />
                    </HBox>
                    <Button fx:id="joinBtn" onAction="#joinGroupOnClick" styleClass="join-btn" text="Join" />
                    <Label fx:id="joinGroupMessageLabel" visible="false" />


                </VBox>
            </VBox>


            <Separator />

            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" styleClass="create-group-box" VBox.vgrow="NEVER">
                    <Label styleClass="create-label" text="Create" />
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Group name" />
                        <TextField fx:id="groupNameField" />
                    </HBox>
                    <Button fx:id="createBtn" onAction="#createBtnOnClick" styleClass="create-btn" text="Create" />
                </VBox>
            </VBox>


        </VBox>
    </HBox>


    <stylesheets>
        <URL value="@../groups.css" />
    </stylesheets>
</HBox>
